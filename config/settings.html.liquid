<div class="tabs-wrapper">
  <input checked="checked" class="tab-head" id="tab1" name="tab" type="radio">
  <label for="tab1">
    Couleurs
  </label>
  <input class="tab-head" id="tab2" name="tab" type="radio">
  <label for="tab2">
    Images
  </label>
  <input class="tab-head" id="tab3" name="tab" type="radio">
  <label for="tab3">
    Polices
  </label>
  <input class="tab-head" id="tab4" name="tab" type="radio">
  <label for="tab4">
    Boutons
  </label>
  <input class="tab-head" id="tab5" name="tab" type="radio">
  <label for="tab5">
    Modules
  </label>

  <div class="tab-body-wrapper">
    <div class="tab-body" id="tab-body-1">
      <fieldset>
        <legend>Général</legend>
        <div class="row">
          <div class="columns medium-4 large-3">
            <label for="body-background">Fond de page</label>
            <input name="admin_theme_settings[body-background]" id="body-background" value="{{ theme_settings.body-background }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="body-color">Couleur par défaut du texte</label>
            <input name="admin_theme_settings[body-color]" id="body-color" value="{{ theme_settings.body-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="body-color-second">Couleur du texte secondaire</label>
            <input name="admin_theme_settings[body-color-second]" id="body-color-second" value="{{ theme_settings.body-color-second }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="accent-color">Couleur d'accent</label>
            <input name="admin_theme_settings[accent-color]" id="accent-color" value="{{ theme_settings.accent-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3 end">
            <label for="nav-link-color">Couleur du texte navigation</label>
            <input name="admin_theme_settings[nav-link-color]" id="nav-link-color" value="{{ theme_settings.nav-link-color }}" type="text" class="minicolors">
          </div>
        </div>
      </fieldset>

      <fieldset>
        <legend>Slider</legend>
        <div class="row">
          <div class="columns medium-4 large-3">
            <label for="slider-title-color">Titre</label>
            <input name="admin_theme_settings[slider-title-color]" id="slider-title-color" value="{{ theme_settings.slider-title-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="slider-subtitle-color">Sous-titre</label>
            <input name="admin_theme_settings[slider-subtitle-color]" id="slider-subtitle-color" value="{{ theme_settings.slider-subtitle-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="slider-link-color">Texte du boutton</label>
            <input name="admin_theme_settings[slider-link-color]" id="slider-link-color" value="{{ theme_settings.slider-link-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="slider-link-hover-color">Texte du boutton au survol</label>
            <input name="admin_theme_settings[slider-link-hover-color]" id="slider-link-hover-color" value="{{ theme_settings.slider-link-hover-color }}" type="text" class="minicolors">
          </div>
        </div>
      </fieldset>

      <fieldset>
        <legend>Menus</legend>
        <div class="row">
          <div class="columns medium-4 large-3">
            <label for="menus-nav-back">Couleur du fond navigation</label>
            <input name="admin_theme_settings[menus-nav-back]" id="menus-title" value="{{ theme_settings.menus-nav-back }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="back-to-menu-link-color">Lien retour au menu</label>
            <input name="admin_theme_settings[back-to-menu-link-color]" id="back-to-menu-link-color" value="{{ theme_settings.back-to-menu-link-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="back-to-menu-link-hover-color">Lien retour au menu (survol)</label>
            <input name="admin_theme_settings[back-to-menu-link-hover-color]" id="back-to-menu-link-hover-color" value="{{ theme_settings.back-to-menu-link-hover-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="ribbon-text-color">Couleur du texte du ruban</label>
            <input name="admin_theme_settings[ribbon-text-color]" id="ribbon-text-color" value="{{ theme_settings.ribbon-text-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="menus-title">Couleur du titre des menus</label>
            <input name="admin_theme_settings[menus-title]" id="menus-title" value="{{ theme_settings.menus-title }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3 end">
            <label for="dish-title">Couleur du titre des plats</label>
            <input name="admin_theme_settings[dish-title]" id="dish-title" value="{{ theme_settings.dish-title }}" type="text" class="minicolors">
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Plats</legend>
        <div class="row">
          <div class="columns medium-4 large-3 end">
            <label for="featured-star-color">Étoile pour plat en avant</label>
            <input name="admin_theme_settings[featured-star-color]" id="featured-star-color" value="{{ theme_settings.featured-star-color }}" type="text" class="minicolors">
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Prix</legend>
        <div class="row">
          <div class="columns medium-4 large-3">
            <label for="price-label-color">Label</label>
            <input name="admin_theme_settings[price-label-color]" id="price-label-color" value="{{ theme_settings.price-label-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3 end">
            <label for="price-value-color">Valeur</label>
            <input name="admin_theme_settings[price-value-color]" id="price-value-color" value="{{ theme_settings.price-value-color }}" type="text" class="minicolors">
          </div>
        </div>
      </fieldset>
      <fieldset>
      <legend>Étiquettes</legend>
        <div class="row">
          <div class="columns medium-4 large-3">
            <label for="label-vegetarian-background">Végétarien (fond)</label>
            <input name="admin_theme_settings[label-vegetarian-background]" id="label-vegetarian-background" value="{{ theme_settings.label-vegetarian-background }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="label-vegetarian-color">Végétarien (texte)</label>
            <input name="admin_theme_settings[label-vegetarian-color]" id="label-vegetarian-color" value="{{ theme_settings.label-vegetarian-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="label-new-background">Nouveau (fond)</label>
            <input name="admin_theme_settings[label-new-background]" id="label-new-background" value="{{ theme_settings.label-new-background }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="label-new-color">Nouveau (texte)</label>
            <input name="admin_theme_settings[label-new-color]" id="label-new-color" value="{{ theme_settings.label-new-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="label-no-pork-background">Pas de porc (fond)</label>
            <input name="admin_theme_settings[label-no-pork-background]" id="label-no-pork-background" value="{{ theme_settings.label-no-pork-background }}" type="text" class="minicolors">
          </div>

          <div class="columns medium-4 large-3">
            <label for="label-no-pork-color">Pas de porc (texte)</label>
            <input name="admin_theme_settings[label-no-pork-color]" id="label-no-pork-color" value="{{ theme_settings.label-no-pork-color }}" type="text" class="minicolors">
          </div>

          <div class="columns medium-4 large-3">
            <label for="label-no-meat-background">Pas de viande (fond)</label>
            <input name="admin_theme_settings[label-no-meat-background]" id="label-no-meat-background" value="{{ theme_settings.label-no-meat-background }}" type="text" class="minicolors">
          </div>

          <div class="columns medium-4 large-3">
            <label for="label-no-meat-color">Pas de viande (texte)</label>
            <input name="admin_theme_settings[label-no-meat-color]" id="label-no-meat-color" value="{{ theme_settings.label-no-meat-color }}" type="text" class="minicolors">
          </div>
        </div>
      </fieldset>
      <fieldset>
        <legend>Page d'accueil</legend>
        <div class="row">
          <div class="columns medium-4 large-3">
            <label for="featured-menus-background">Menus en accueil (fond)</label>
            <input name="admin_theme_settings[featured-menus-background]" id="featured-menus-background" value="{{ theme_settings.featured-menus-background }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="featured-menus-title-color">Menus en accueil (titre)</label>
            <input name="admin_theme_settings[featured-menus-title-color]" id="featured-menus-title-color" value="{{ theme_settings.featured-menus-title-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3 end">
            <label for="featured-menus-border-color">Menus en accueil (bordure)</label>
            <input name="admin_theme_settings[featured-menus-border-color]" id="featured-menus-border-color" value="{{ theme_settings.featured-menus-border-color }}" type="text" class="minicolors">
          </div>
        </div>
        <div class="row">
          <div class="columns medium-4 large-3">
            <label for="featured-foods-background">Plats en accueil (fond)</label>
            <input name="admin_theme_settings[featured-foods-background]" id="featured-foods-background" value="{{ theme_settings.featured-foods-background }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3">
            <label for="featured-foods-title-color">Plats en accueil (titre)</label>
            <input name="admin_theme_settings[featured-foods-title-color]" id="featured-foods-title-color" value="{{ theme_settings.featured-foods-title-color }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3 end">
            <label for="featured-foods-border-color">Plats en accueil (bordure)</label>
            <input name="admin_theme_settings[featured-foods-border-color]" id="featured-foods-border-color" value="{{ theme_settings.featured-foods-border-color }}" type="text" class="minicolors">
          </div>
        </div>
      </fieldset> 
      <fieldset>
        <legend>Formulaires</legend>
        <div class="row">
          <div class="columns medium-4 large-3">
            <label for="label-form">Label des formulaires</label>
            <input name="admin_theme_settings[label-form]" id="label-form" value="{{ theme_settings.label-form }}" type="text" class="minicolors">
          </div>
          <div class="columns medium-4 large-3 end">
            <label for="border-form">Bordure des formulaires</label>
            <input name="admin_theme_settings[border-form]" id="border-form" value="{{ theme_settings.border-form }}" type="text" class="minicolors">
          </div>
        </div>
      </fieldset>
    </div>
        
    <div class="tab-body" id="tab-body-2">
      <fieldset>
        <legend>Page d'accueil</legend>
        <div class="row">
          <div class="columns medium-4 large-3">
            <div class="filelist">
              {{ 'home-about-background.jpg' | asset_url | image_tag }}
            </div>
          </div>

          <div class="columns medium-8 large-9 end">
            <label for="home-about-background">Image de fond à propos (jpg)</label>
            <input class="icheck-me" name="admin_theme_settings[home-display-about-background]" id="home-display-about-background" type="checkbox" value="{{ theme_settings.home-display-about-background }}" data-skin='black-green' {% if theme_settings.home-display-about-background %}checked{% endif %}/>
            <label for="home-display-about-background">Afficher l'image</label>

            <div id="plupload-home-about-background" class="input-file">
              <input name="admin_theme_settings[assets][home-about-background.jpg]" type="file"/>
            </div>
          </div>
        </div>
      </fieldset>
    </div>


    <div class="tab-body" id="tab-body-3">
      <fieldset>
        <legend>Polices</legend>
        <div class="row">
          <div class="columns">
            <p>Si vous utilisez une ou plusieurs polices du service Google Fonts, indiquez dans ce champ le code fourni par Google. Lorsque vous êtes à l'étape "Use" sur Google Fonts, le point "3. Add this code to your website:" affiche un tag &lt;link&gt;. Copiez tout le code et collez-le ici.</p>
            <label for="google-fonts-link">Google Fonts : tag &lt;link&gt;</label>
            <input type="text" id="google-fonts-link" name="admin_theme_settings[google-fonts-link]" value="{{ theme_settings.google-fonts-link | escape_once }}" placeholder="&lt;link href='http://fonts.googleapis.com/css?family=...">
          </div>
        </div>
        <div class="row">
          <div class="columns medium-6">
            <label for="body-font">Corps de texte</label>
            <input type="text" id="body-font" name="admin_theme_settings[body-font]" value="{{ theme_settings.body-font }}">
            <span>Indiquez le nom de la police seulement, ou bien la font stack</span>
          </div>
          <div class="columns medium-6">
            <label for="header-font">Titres</label>
            <input type="text" id="header-font" name="admin_theme_settings[header-font]" value="{{ theme_settings.header-font }}">
            <span>Indiquez le nom de la police seulement, ou bien la font stack</span>
          </div>
        </div>
      </fieldset>
    </div>

    <div class="tab-body" id="tab-body-4">
      <fieldset>
        <legend>Boutons</legend>
        <div class="row">
          <label>Bouton haut de page d'accueil</label>
          <div class="columns medium-6">
            <label for="button_header_home_text_fr">Texte (fr)</label>
            <input type="text" id="button_header_home_text_fr" name="admin_theme_settings[button_header_home_text_fr]" value="{{ theme_settings.button_header_home_text_fr }}">
            <label for="button_header_home_text_en">Texte (en)</label>
            <input type="text" id="button_header_home_text_en" name="admin_theme_settings[button_header_home_text_en]" value="{{ theme_settings.button_header_home_text_en }}">
          </div>
          <div class="columns medium-6">
            <label for="button_header_home_link">Lien</label>
            <input type="text" id="button_header_home_link" name="admin_theme_settings[button_header_home_link]" value="{{ theme_settings.button_header_home_link }}">
          </div>
        </div>
      </fieldset>
    </div>

    <div class="tab-body" id="tab-body-5">
      <fieldset>
        <legend>Communication</legend>
        <div class="small-12 medium-6 large-6 columns">
          {% if theme_settings.footer_display_newsletter %}
            <input class="icheck-me" name="admin_theme_settings[footer_display_newsletter]" id="footer_display_newsletter" type="checkbox" value="{{ theme_settings.footer_display_newsletter }}" data-skin='black-green' checked/>
          {% else %}
            <input class="icheck-me" name="admin_theme_settings[footer_display_newsletter]" id="footer_display_newsletter" type="checkbox" value="{{ theme_settings.footer_display_newsletter }}" data-skin='black-green' />
          {% endif %}
          <label style="margin-right:.5em;" for="footer_display_newsletter">Afficher la newsletter</label>
        </div>

        <div class="small-12 medium-6 large-6 columns end">
          {% if theme_settings.display_contact_form %}
            <input class="icheck-me" name="admin_theme_settings[display_contact_form]" id="display_contact_form" type="checkbox" value="{{ theme_settings.display_contact_form }}" data-skin='black-green' checked/>
          {% else %}
            <input class="icheck-me" name="admin_theme_settings[display_contact_form]" id="display_contact_form" type="checkbox" value="{{ theme_settings.display_contact_form }}" data-skin='black-green' />
          {% endif %}
          <label style="margin-right:.5em;" for="display_contact_form">Afficher le formulaire de contact</label>
        </div>
      </fieldset>

      <fieldset>
        <legend>Carte Google</legend>
        <div class="small-12 medium-6 large-6 columns">
          <input class="icheck-me" name="admin_theme_settings[google_map_type]" id="radio_google_none" type="radio" value="" data-skin='black-green' {% if theme_settings.google_map_type == "" %}checked{% endif %}/>
          <label style="margin-right:.5em;" for="radio_google_none">Ne pas afficher la carte</label>
          <input class="icheck-me" name="admin_theme_settings[google_map_type]" id="radio_google_map_image" type="radio" value="image" data-skin='black-green' {% if theme_settings.google_map_type == "image" %}checked{% endif %}/>
          <label style="margin-right:.5em;" for="radio_google_map_image">Afficher la carte sous forme d'image</label>
          <input class="icheck-me" name="admin_theme_settings[google_map_type]" id="radio_google_map_embed" type="radio" value="embed" data-skin='black-green' {% if theme_settings.google_map_type == "embed" %}checked{% endif %}/>
          <label style="margin-right:.5em;" for="radio_google_map_embed">Afficher la carte interactive</label>
        </div>
      </fieldset>

      <fieldset>
        <legend>
          Visite virtuelle
          <a class="small dropdown" data-options="align:top" data-dropdown="informations-link" style="display:inline;width:25px;text-align:center;">
            &nbsp<i class="fa fa-info"></i>&nbsp
          </a>
          <div class="f-dropdown content info" id="informations-link" data-dropdown-content="">
            <p>
              Où trouver vos informations ? <a target="blank" href='https://www.google.com/maps?output=classic'>google.com/maps?output=classic</a>
            </p>
            <img src="/assets/business-view-info.jpg">
          </div>
        </legend>
        <div class="small-12 medium-6 large-6 columns end">
          <div class="row">
            {% if theme_settings.display_google_business_view_embed %}
              <input class="icheck-me" name="admin_theme_settings[display_google_business_view_embed]" id="display_google_business_view_embed" type="checkbox" value="{{ theme_settings.display_google_business_view_embed }}" data-skin='black-green' checked/>
            {% else %}
              <input class="icheck-me" name="admin_theme_settings[display_google_business_view_embed]" id="display_google_business_view_embed" type="checkbox" value="{{ theme_settings.display_google_business_view_embed }}" data-skin='black-green' />
            {% endif %}
            <label style="margin-right:.5em;" for="display_google_business_view_embed">Afficher la visite virtuelle</label>
          </div>

          <div class="row">
            <label class="left" for="google_business_view_embed">Code HTML</label>
            <input name="admin_theme_settings[google_business_view_embed]" type="text" id="google_business_view_embed" value="{{ theme_settings.google_business_view_embed | escape_once }}" />
          </div>
        </div>

        <div class="small-12 medium-6 large-6 columns">
          <div class="row">
            {% if theme_settings.display_google_business_view_url %}
              <input class="icheck-me" name="admin_theme_settings[display_google_business_view_url]" id="display_google_business_view_url" type="checkbox" value="{{ theme_settings.display_google_business_view_url }}" data-skin='black-green' checked/>
            {% else %}
              <input class="icheck-me" name="admin_theme_settings[display_google_business_view_url]" id="display_google_business_view_url" type="checkbox" value="{{ theme_settings.display_google_business_view_url }}" data-skin='black-green' />
            {% endif %}
            <label style="margin-right:.5em;" for="display_google_business_view_url">Afficher le lien</label>
          </div>

          <div class="row">
            <label class="left" for="google_business_view_url">Url</label>
            <input name="admin_theme_settings[google_business_view_url]" type="text" id="google_business_view_url" value="{{ theme_settings.google_business_view_url }}" />
          </div>
        </div>
      </fieldset>
    </div>
  </div>
</div>

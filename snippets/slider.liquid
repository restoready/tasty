<script type="text/javascript">
  (function() {
    if(window.matchMedia("(min-width:1088px)").matches) {
      var jqueryScriptTag = document.createElement('script');
      jqueryScriptTag.type ='text/javascript';
      jqueryScriptTag.src = '//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js';
      jqueryScriptTag.onload = function() {
        $.getScript(
          '{{ "jquery.bxslider.min.js" | asset_url | javascript_url }}', 
          function() {
            $('.home-header').hide();

            $('.bxslider img').each(function() {
              $(this).attr('src', $(this).data('src'));
            });
            $('.bxslider').bxSlider({
              "pager": false,
              "infiniteLoop": false,
              "hideControlOnEnd": true
            });
        });
      }
      document.getElementsByTagName('head')[0].appendChild(jqueryScriptTag);
    }
  })();
</script>

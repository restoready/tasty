<div class="food {% if food.featured_in_menu? %}food--featured{% endif %} {{food.auto_css_classes}}" id="food-{{food.id}}">
  {% if food.main_image? %}
    {{ food.main_image | custom_image_url:'80x80#' | image_tag:'class:food__image circle' }}
  {% endif %}
  <div class="food__body">
    <h5 class="food__title">
      {% if food.featured_in_menu? %}
        <i class="icon-star"></i>
      {% endif %}
      {{ food.name }}
    </h3>
    {% if food.tags? %}
      <div class="food__tags">
        {% for tag in food.tags %}
          <i class="tag tag--{{ tag.css_class }}">{{ tag.name }}</i>
        {% endfor %}
      </div>
    {% endif %}
    {% if food.summary? %}
      <div class="food__summary">
        {{ food.summary }}
      </div>
    {% endif %}
    {% if prices.size > 0 %}
      <div class="food-prices">
        <dl class="prices">
          {% for price in prices %}
            <dt class="price__label">{{ price.title }}</dt>
            <dd class="price__value">{{ price.amount | money }}</dd>
          {% endfor %}
        </dl>
      </div>
    {% endif %}
  </div>
  <hr class="food__separator">
</div>

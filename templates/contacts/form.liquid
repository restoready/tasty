<section class="page-header page-header--contact">
  <div class="wrapper">
    <header class="section__header page-header__header">
      <h1>{{ contact_settings.contact_title | t }}</h1>
    </header>
    <div class="section__main page-header__description">
      <p>{{ contact_settings.contact_content }}</p>
    </div>
  </div>
</section>

<div class="wrapper">
  <section class="form-contact">
    {% contact_form %}
      <fieldset class="field-group">
        <legend class="field-group__legend">{{ "Vos coordonnées" | t }}</legend>
        <div class="input input--name">
          <label for="contactFromName">{{ "Votre nom :" | t }}</label>
          <input id="contactFromName" name="message[from_name]" type="text" required>
        </div>
        <div class="input input--mail">
          <label for="contactFromEmail">{{ "Votre mail :" | t }}</label>
          <input id="contactFromEmail" name="message[from_email]" type="text" required>
        </div>
        <div class="textarea">
          <label for="contactBody">{{ "Votre message :" | t }}</label>
          <textarea class="textarea-contact" id="contactBody" name="message[body]"></textarea>
        </div>
        <div class="submit">
          <input class="button-custom" type="submit" value="{{ "Envoyer" | t }}">
        </div>
      </fieldset>
    {% endcontact_form %}
  </section>
  <aside class="contact-informations">
    {% if restaurant.street_address? || restaurant.zip_code? || restaurant.city? %}
      <div class="adress-contact-wrapper">
        <h3 class="adress-contact">{{ "Adresse :" | t }}</h3>
        <p>
          {% if restaurant.street_address? %}
            {{ restaurant.street_address }}
            <br />
          {% endif %}
          {% if restaurant.zip_code? %} {{ restaurant.zip_code }} {% endif %}
          {% if restaurant.city? %} {{ restaurant.city }} {% endif %}
        </p>
      </div>
    {% endif %}
    {% if restaurant.phone? %}
      <div class="tel-contact-wrapper">
        <h3 class="tel-contact">{{ "Téléphone :" | t }}</h3>
        <p>{{ restaurant.phone }}</p>
      </div>
    {% endif %}
  </aside>
</div>

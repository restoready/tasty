{% if slides.size > 0 %}
  <ul class="bxslider">
    {% for slide in slides %}
      <li><img src="{{ slide.image | custom_image_url: '1920x640#' }}"/></li>
    {% endfor %}
  </ul>
{% endif %}

<div class="grid">
  {% if home_menus.size > 0 %}
    {% for menu in home_menus %}
      <div class="grid-item medium--one-half large--one-third menus__item--home">
        <h1 class="menu__title--home">
          {% if menu.parent? %}
            <a href="{{ menu.root_parent.url }}#menu-{{menu.id}}">{{ menu.name }}</a>
          {% else %}
            <a href="{{ menu.url }}">{{ menu.name }}</a>
          {% endif %}
        </h1>
        <div class="post-thumbnail">
          {% if menu.parent? %}
            <a href="{{ menu.root_parent.url }}#menu-{{menu.id}}" class="post-find-more">
          {% else %}
            <a href="{{ menu.url }}" class="post-find-more">
          {% endif %}
          <span><div class="divider up"></div>{{ "En savoir +" | t }}<div class="divider down"></div></span>
          </a>
          <img src="{{ menu.main_image | custom_image_url: "295x295#" }}" alt="menu">
        </div>
        {% if menu.summary? %}
          <div class="menu__description--home">
            <p>{{ menu.summary }}</p>
          </div>
        {% endif %}
        {% if menu.parent? %}
          <a href="{{ menu.root_parent.url }}#menu-{{menu.id}}" class="link-view-menu">{{ "Voir le menu" | t }}</a>
        {% else %}
          <a href="{{ menu.url }}" class="link-view-menu">{{ "Voir le menu" | t }}</a>
        {% endif %}
      </div>
    {% endfor %}
  {% endif %}

  {% if home_foods.size > 0 %}
    {% for food in home_foods %}
      <div class="grid-item medium--one-half large--one-third menus__item--home">
        {% assign assotiated_menu = food.menu %}
        <h1 class="menu__title--home">
          <a href="{% if assotiated_menu.parent? %}{{ assotiated_menu.root_parent.url }}#menu-{{assotiated_menu.id}}{% else %}{{ assotiated_menu.url }}{% endif %}">{{ food.name }}</a>
        </h1>
        <div class="post-thumbnail">
          <a href="{% if assotiated_menu.parent? %}{{ assotiated_menu.root_parent.url }}#menu-{{assotiated_menu.id}}{% else %}{{ assotiated_menu.url }}{% endif %}" class="post-find-more">
          <span><div class="divider up"></div>{{ "En savoir +" | t }}<div class="divider down"></div></span>
          </a>
          <img src="{{ food.main_image | custom_image_url: "295x295#" }}" alt="menu">
        </div>
        {% if food.summary? %}
          <div class="menu__description--home">
            <p>{{ food.summary }}</p>
          </div>
        {% endif %}
        <a href="{% if assotiated_menu.parent? %}{{ assotiated_menu.root_parent.url }}#menu-{{assotiated_menu.id}}{% else %}{{ assotiated_menu.url }}{% endif %}" class="link-view-menu">{{ "Voir le plat" | t }}</a>
      </div>
    {% endfor %}
  {% endif %}
</div>

<div class="wrapper">
  <div class="grid">
    <div class="grid-item large--one-half">
      <section class="opening-hours">
        <header class="section__header">
          <h2 class="section__title">{{ "Horaires" | t }}</h2>
        </header>
        <main class="section__main">
          <dl class="opening-days">
          {% for day in opening_hours %}
            <dt class="opening-day">
              {{ day.name }}
            </dt>
            <dd class="opening-shifts">
              {{ day.shifts }}
            </dd>
          {% endfor %}
          </dl>
        {% if restaurant.opening_hours_information? %}
          <div class="opening-hours__information">
            <p>{{ restaurant.opening_hours_information }}</p>
          </div>
        {% endif %}
        </main>
      </section>
    </div>

    <div class="grid-item large--one-half">
      <section class="directions">
        <header class="section__header">
          <h2 class="section__title">{{ "Localisation" | t }}</h2>
        </header>
        <main class="section__main">
          {% if theme_settings.google_map_type != "" %}
            <div class="map">
              {% if theme_settings.google_map_type == "embed" %}
                {% google_map_embed: "size:100%x320" %}
              {% elsif theme_settings.google_map_type == "image" %}
                <a class="map__link" href="{% google_map_url %}">
                  <img class="map__image" src="{% google_map_image_url: "size:640x320" %}" />
                </a>
              {% endif %}
            </div>
          {% endif %}
          {% if restaurant.street_address? || restaurant.zip_code? || restaurant.city? %}
          <div class="address">
            <p>
              {% if restaurant.street_address? %}
                {{ restaurant.street_address }}
                <br />
              {% endif %}
              {% if restaurant.zip_code? %} {{ restaurant.zip_code }} {% endif %}
              {% if restaurant.city? %} <strong>{{ restaurant.city }}</strong> {% endif %}
            </p>
          </div>
          {% endif %}
        </main>
        <footer class="section__footer">
            <a class="button directions__link" href="{% google_map_url %}">
              {{ "Voir l'itin√©raire" | t }}
            </a>
        </footer>
      </section>
    </div>
  </div>
</div>
